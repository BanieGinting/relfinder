<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				xmlns:local="*"
				width="300" height="400" borderAlpha="0.7" creationComplete="{init();}" >
	
	<mx:Script>
		<![CDATA[
			
			import graphElements.Element;
			
			private function init():void {
				
			}
			
			[Bindable]
			public var resourceURI:String = ""; 
			
			[Bindable]
			public var selectedElement:Element = null;
			
			public function validate():void {
				selectedElement = new Element(resourceURI, resourceURI, resourceURI);
			}
			
			
		]]>
	</mx:Script>
	
	<mx:VBox width="100%" height="100%">
		<mx:Form width="100%">
			<mx:FormItem width="100%" label="Resource URI:">
				<mx:HBox width="100%">
					<mx:TextInput id="inURI" width="100%" text="{resourceURI}" />
					<mx:Button label="validate" click="validate()" />
				</mx:HBox>
				
			</mx:FormItem>
		</mx:Form>
		
		<local:InfoBox id="infoBox" findRelationPanel="{this}" selectedElement="{selectedElement}"/>
		
	</mx:VBox>
	
</mx:TitleWindow>